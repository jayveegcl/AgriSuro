<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/gray_50"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crop_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rice (Lowland)"
                android:textColor="@color/green_700"
                android:textStyle="medium" />

            <com.google.android.material.chip.Chip
                android:id="@+id/suitability_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/excellent"
                app:chipBackgroundColor="@color/green_500"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/recommendation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Favorable conditions for planting in the next 3 days" />

        <TextView
            android:id="@+id/timeframe_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_thermometer"
            android:drawablePadding="4dp"
            android:text="Best time: Within this week"
            android:textColor="@color/gray_600"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>