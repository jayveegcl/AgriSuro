<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnRiceVariants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rice Variants" />

        <Button
            android:id="@+id/btnRiceDiseases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rice Diseases"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnRiceWeeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rice Weeds"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnPesticides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesticides"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnFertilizers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fertilizers"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>
