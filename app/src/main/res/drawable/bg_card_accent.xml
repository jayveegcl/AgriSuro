<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle shadow -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#10000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Background with slight gradient -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="@color/primary_color_light"
                android:startColor="@color/primary_color"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Very subtle pattern overlay -->
    <item>
        <shape>
            <solid android:color="#05FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>